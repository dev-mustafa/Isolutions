@model IEnumerable<ISolutions.Portal.Models.TrainingEvent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Control.cshtml";
}

<h2>Events</h2>
<hr />

@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" }) <br /> <br />
<table class="table table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.City.Name
            </td>
            <td>
                @item.Course.Title
            </td>
            <td>
                @item.Duration
            </td>
            <td>
                @item.Date.ToShortDateString()
            </td>
            <td>
                <div class="btn-group btn-group-xs btn-group-justified">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </div>
            
            </td>
        </tr>
    }

</table>
